<section class="show-user">
	<div class="row">
		<div class="col span-1-of-3">
			<div class="image-container">
				<%= image_tag(@user.image, size: "300x300", alt: "user_image" ) %>
			</div>
		</div>

		<div class="col span-2-of-3">
			<div class="user-information">
				<span class="hi-box">Hi</span> 
				<span class="im-user">I'm</span>
				<span class="full-name-user"> <%= @user.full_name %></span> <br>
				<span class="type-of-user"><%= @user.type %> User Of The Market!</span>
				<% if current_user || current_user.try(:type) == "AdminUser" %>
					<div class="user-actions">
						<%= link_to "Edit User", edit_user_path(@user), class: "btn-actions", id: "edit_#{@user.id}_user" %>
						<%= link_to "New Product", "", class: "btn-actions"%>
						<%= link_to "New Category", "", class: "btn-actions" %>
					</div>
				<% end %>
				<hr />
				<span class="email-of-user">Email: <%= @user.email %></span><br>
				<span class="phone-of-user">Phone: <%= @user.phone %></span><br>
				<span class="products-of-user">Number of products to sell: <%= @user.products.count %></span><br>
				<div class="actions">
					<%= link_to "Products to sell", "", class: "btn-actions", id: "btn_products" %>
					<%= link_to "Categories present", "", class: "btn-actions", id: "btn_categories" %>
				</div>
			</div>
		</div>
	</div>
</section>