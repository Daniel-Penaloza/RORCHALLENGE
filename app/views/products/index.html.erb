
<center><h1>Product catalogue</h1></center>

<% @products.each do |product| %>
  <div class = "well">
    <div class="row">
      <div class="col-md-2"></div>
      <div class"col-md-8">
          <h3><%= product.name %> </h3><br>
          <% if product.description.any? %> <br>
          Description:
            <ul>
              <% product.description.each do |desc| %> 
                  <li><%= desc %></li>
              <% end %>
            </ul>

          <% end %>
          <br> Category: <%= product.category.name %> <br> 
          Sold by: <%= product.user.first_name %>  <%= product.user.last_name %> <br><br>
          <%= link_to "Edit", edit_product_path(product) %>
      </div>
    </div>
  </div>
<% end %>